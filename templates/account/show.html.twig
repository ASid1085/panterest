{% extends 'layouts/base.html.twig' %}

{% block title 'Profile' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>

            <img src="{{ app.user.gravatar }}" alt="{{ app.user.fullName }}'s avatar" class=" shadow rounded-circle">

            <p class="lead mt-5">{{ app.user.email }}</p>
            <h2 >{{ app.user.fullName }}</h2>

            <a href="{{ path('app_account_edit') }}">Edit account</a> | <a href="">Change password</a>
        </div>
    </div>
{% endblock %}
