{% extends 'layouts/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="text-center mt-5 mb-3">Register</h1>
 
            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="col-md-6 mx-auto">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.password) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <div class="d-grid">
                    <button type="submit" class="btn btn-lg btn-primary" formnovalidate>Register</button>
                </div>
            {{ form_end(registrationForm) }}

            <p class="mt-5 text-center text-muted">Already have an account ? <a href="{{ path('app_login') }}">Log in</a></p>
        </div>
    </div>
</section>

    
{% endblock %}
